@page
@model ContactModel
@{
    ViewData["Title"] = "Contact Us";
}
<br/>
<div class="text-center">
    <h1 class="align-center">Contact us</h1>
</div>
<br/>
<div class="row">
    <div class="col-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="name" class="control-label">Name: </label>
                <input asp-for="name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label">E-mail: </label>
                <input asp-for="email" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="message" class="control-label">Message: </label>
                <input asp-for="message" class="form-control">
            </div>
            <button type="submit" value="submit">Send</button>
        </form>
    </div>
    <div class="col-6">
        <div class="text-center">
            <br/>
            <p>
                Please get in touch if you are interested in our
                Adoption, Volunteering or Fostering programmes.
            </p>
        </div>
    </div>
</div>
<br/>

<p class="text-success">@Model.MessageSent</p>