@page
@model animalShelter.Pages.Dogs.ListModel

@{
    ViewData["Title"] = "Dogs";
}
<br/>
<p>
    <a asp-page="Create">Create New Dog</a>
</p>

<table class="table table-hover">
    <thead>
    <tr class="table-dark">
        <th>
            <a asp-page="./List" asp-route-sortOrder="@Model.NameSort">
                @Html.DisplayNameFor(model => model.Dogs[0].Name)</a>
        </th>
        <th>
            <a asp-page="./List" asp-route-sortOrder="@Model.DateSort">
                @Html.DisplayNameFor(model => model.Dogs[0].Dob)</a>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dogs[0].Breed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dogs[0].Sex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dogs[0].Summary)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Dogs)
    {
        <tr class="table-active">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.DogID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DogID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DogID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>