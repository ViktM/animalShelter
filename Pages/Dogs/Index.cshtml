@page
@model animalShelter.Pages.Dogs.IndexModel

@{
    ViewData["Title"] = "Dogs";
}

<div class="text-center">
    <h1 class="align-center">Meet the dogs</h1>
</div>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter"/>
            <input type="submit" value="Search" class="btn btn-primary"/> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<div class="container">
    <div class="row">
        @foreach (var item in Model.Dogs)
        {
            <div class="col-sm-6 col-md-4">
                <div class="card border-secondary mb-3" style="...">
                    <img class="card-img-top" src="https://placedog.net/800/640?id=26" alt="Card image">
                    <div class="card-body">
                        @* <img class="card-image" src="@Html.DisplayFor(modelItem => item.ImageUrl"> *@
                        <h2 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h2>
                        <h5 class="card-breed">breed:@Html.DisplayFor(modelItem => item.Breed)</h5>
                        <h5 class="card-sex">sex: @Html.DisplayFor(modelItem => item.Sex)</h5>
                        <p class="card-summary">@Html.DisplayFor(modelItem => item.Summary)
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@{
    var prevDisabled = !Model.Dogs.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Dogs.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Dogs.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Dogs.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @nextDisabled">
    Next
</a>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter"/>
            <input type="submit" value="Search" class="btn btn-primary"/> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
    <th>
        <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
           asp-route-currentFilter="@Model.CurrentFilter">
            @Html.DisplayNameFor(model => model.Dogs[0].Name)
        </a>
    </th>
    <th>
        <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort"
           asp-route-currentFilter="@Model.CurrentFilter">
            @Html.DisplayNameFor(model => model.Dogs[0].Dob)
        </a>
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Dogs[0].Breed)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Dogs[0].Sex)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Dogs[0].Summary)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Dogs[0].ImageUrl)
    </th>
    <th></th>

    </thead>
    <tbody>
    @foreach (var item in Model.Dogs)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DogID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DogID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DogID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

