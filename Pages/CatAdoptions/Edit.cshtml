@page
@model animalShelter.Pages.CatAdoptions.EditModel

@{
    ViewData["Title"] = "Edit Cat Adoption";
}
<br/>
<h4>Edit Cat Adoption Details</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CatAdoption.CatAdoptionID" />
            <div class="form-group">
                <label asp-for="CatAdoption.CatID" class="control-label"></label>
                <select asp-for="CatAdoption.CatID" class="form-control" asp-items="ViewBag.CatID"></select>
                <span asp-validation-for="CatAdoption.CatID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatAdoption.UserID" class="control-label"></label>
                <select asp-for="CatAdoption.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="CatAdoption.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatAdoption.AdoptionDate" class="control-label"></label>
                <input asp-for="CatAdoption.AdoptionDate" class="form-control" />
                <span asp-validation-for="CatAdoption.AdoptionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
