@page
@model animalShelter.Pages.CatAdoptions.DeleteModel

@{
    ViewData["Title"] = "Delete Cat Adoption";
}
<br/>
<h3>Are you sure you want to delete this Cat Adoption?</h3>
<div>
    <h4>Cat Adoption</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CatAdoption.Cat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CatAdoption.Cat.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CatAdoption.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CatAdoption.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CatAdoption.AdoptionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CatAdoption.AdoptionDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="CatAdoption.CatAdoptionID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
