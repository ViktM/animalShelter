@page
@model animalShelter.Pages.DogAdoptions.EditModel

@{
    ViewData["Title"] = "Edit Dog Adoption";
}
<br/>
<h4>Edit Dog Adoption Details</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DogAdoption.DogAdoptionID"/>
            <div class="form-group">
                <label asp-for="DogAdoption.DogID" class="control-label"></label>
                <select asp-for="DogAdoption.DogID" class="form-control" asp-items="ViewBag.DogID"></select>
                <span asp-validation-for="DogAdoption.DogID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DogAdoption.UserID" class="control-label"></label>
                <select asp-for="DogAdoption.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="DogAdoption.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DogAdoption.AdoptionDate" class="control-label"></label>
                <input asp-for="DogAdoption.AdoptionDate" class="form-control"/>
                <span asp-validation-for="DogAdoption.AdoptionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}