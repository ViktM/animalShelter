@page
@model animalShelter.Pages.DogAdoptions.DeleteModel

@{
    ViewData["Title"] = "Delete Dog Adoption";
}
<br/>
<h3 class="text-danger">Are you sure you want to delete this Dog Adoption?</h3>
<div>
    <h4>Delete Dog Adoption</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DogAdoption.Dog)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DogAdoption.Dog.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DogAdoption.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DogAdoption.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DogAdoption.AdoptionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DogAdoption.AdoptionDate)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="DogAdoption.DogAdoptionID"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>