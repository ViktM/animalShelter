@page
@model animalShelter.Pages.DogAdoptions.DetailsModel

@{
    ViewData["Title"] = "Dog Adoption Details";
}
<br/>
<div>
    <h4>Dog Adoption</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DogAdoption.Dog)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DogAdoption.Dog.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DogAdoption.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DogAdoption.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DogAdoption.AdoptionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DogAdoption.AdoptionDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.DogAdoption.DogAdoptionID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
