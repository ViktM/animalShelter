<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title >@ViewData["Title"] - Dog Shelter</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.4.1/sketchy/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <script src="https://js.stripe.com/v3/"></script>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Animal Shelter</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-page="/About/Index">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-page="/Dogs/Index">Our Dogs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-page="/Cats/Index">Our Cats</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-page="/Administration/Index">Administration</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-page="/Contact/Index">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="" asp-page="/Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
        <p id="datetime" class="text-white"></p>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2019 - Animal Shelter - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootswatch/4.4.1/sketchy/bootstrap.min.css"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>

var dt = new Date();
document.getElementById("datetime").innerHTML = (
    ("0"+dt.getDate()).slice(-2)) +"."+ 
    (("0"+(dt.getMonth()+1)).slice(-2)) +"."+ 
    (dt.getFullYear()) +" "+ 
    (("0"+dt.getHours()).slice(-2)) +":"+ 
    (("0"+dt.getMinutes()).slice(-2));
</script>

@RenderSection("Scripts", false)
</body>
</html>